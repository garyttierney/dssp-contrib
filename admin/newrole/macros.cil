(macro newrole_exec ((type ARG1))
	(call can_exec (ARG1 newrole.cmd_file)))

(macro newrole_auto_subj_type_transition ((type ARG1))
	(call newrole_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 newrole.cmd_file newrole.subj)))

(macro newrole_send_signal ((type ARG1))
	(allow ARG1 newrole.subj (process (signal))))

(macro newrole_run ((type ARG1)(role ARG2))
	(call newrole_auto_subj_type_transition (ARG1))
	(roleattributeset newrole_role ARG2))

