(roleattribute auditctl_role)

(block auditctl
	(blockinherit app_blk)

	(roleattributeset auditctl_role sys.role)

	(roletype auditctl_role subj)

	(allow subj self (netlink_audit_socket (nlmsg_readpriv)))

	(call sys_audit_client_subj_type (subj))
	(call sys_audit_set_params (subj))

	(call file_getattr_all (subj))

	(call pam_read_config_files (subj))

	(optional auditctl_optional_auditd
		(call auditd_read_config (subj)))

	(optional audit_optional_sd
		(call sd_daemon (subj cmd_file))))
