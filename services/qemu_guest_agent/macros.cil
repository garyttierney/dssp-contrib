	(optional qemu_guest_agent_adm_optional_sd
		(call sd.daemon_adm_subj_type (ARG1)))
	(optional qemu_guest_agent_adm_optional_sd_askpwd
		(call sd_askpwd_run_sd_askpwd_agent (ARG1 ARG2))))
