(macro firefox_role_pattern ((role ARG1)(type ARG2)(type ARG3))
	(call auto_subj_type_transition_pattern (ARG2 firefox.cmd_file ARG3))

	(roletype ARG1 ARG3)

	(allow ARG2 ARG3 (process (signal)))

	(allow ARG3 ARG2 (process (signal)))

	(call firefox_manage_home (ARG2))
	(call firefox_relabel_home (ARG2))

	(call firefox_home_dir_obj_type_transition_home (ARG2))

	(call firefox_manage_home_cache (ARG2))
	(call firefox_relabel_home_cache (ARG2))

	(call firefox_home_cache_obj_type_transition_home_cache (ARG2))

	(call firefox_manage_tmpfs_files (ARG2))
	(call firefox_relabel_tmpfs_files (ARG2))

	(call firefox_manage_var_tmp_files (ARG2))
	(call firefox_relabel_var_tmp_files (ARG2)))

(macro firefox_auto_subj_type_transition_pattern ((type ARG1)(type ARG2))
	(allow ARG1 ARG2 (process (signal)))
	(call auto_subj_type_transition_pattern (ARG1 firefox.cmd_file ARG2)))

