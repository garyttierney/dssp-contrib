(macro wodim_exec ((type ARG1))
	(call can_exec (ARG1 wodim.cmd_file)))

(macro wodim_auto_subj_type_transition ((type ARG1))
	(call wodim_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 wodim.cmd_file wodim.subj)))

(macro wodim_run ((type ARG1)(role ARG2))
	(call wodim_auto_subj_type_transition (ARG1))
	(roleattributeset wodim_role (ARG2)))

(macro wodim_send_signal ((type ARG1))
	(allow ARG1 wodim.subj (process (signal))))
