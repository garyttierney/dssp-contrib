(macro mysysstat_exec ((type ARG1))
	(call can_exec (ARG1 mysysstat.cmd_file)))

(macro mysysstat_auto_subj_type_transition ((type ARG1))
	(call mysysstat_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 mysysstat.cmd_file mysysstat.subj)))

(macro mysysstat_send_signal ((type ARG1))
	(allow ARG1 mysysstat.subj (process (signal))))

(macro mysysstat_run ((type ARG1)(role ARG2))
	(call mysysstat_auto_subj_type_transition (ARG1))
	(roleattributeset mysysstat_role ARG2))
