(roleattribute xserver_backlight_helper_role)

(block xserver_backlight_helper
	(blockinherit app_blk)

	(roletype xserver_backlight_helper_role subj)

	(call fs_list_sysfs (subj))
	(call fs_rw_sysfs_files (subj))
	(call fs_read_sysfs_lnk_files (subj))

	(call xserver_rw_inherited_unix_stream_sockets (subj)))

(context backlighthelper_exec (system_u object_r backlighthelper_exec_t (systemlow systemlow)))
(filecon "/usr/libexec/xf86-video-intel-backlight-helper" file backlighthelper_exec)

