(tunableif enable_mls
	(true
		(filecon "HOME_DIR" dir (sys.id sys.role home_dir.file (systemlow systemhigh)))
		(filecon "USER_SPOOL" file (sys.id sys.role var_spool_user.var_spool_file (systemlow systemhigh))))
	(false
		(filecon "HOME_DIR" dir (sys.id sys.role home_dir.file (systemlow systemlow)))
		(filecon "USER_SPOOL" file (sys.id sys.role var_spool_user.var_spool_file (systemlow systemlow)))))
