(macro pwgen_exec ((type ARG1))
	(call can_exec (ARG1 pwgen.cmd_file)))

(macro pwgen_auto_subj_type_transition ((type ARG1))
	(call pwgen_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 pwgen.cmd_file pwgen.subj)))

(macro pwgen_send_signal ((type ARG1))
	(allow ARG1 pwgen.subj (process (signal))))

(macro pwgen_run ((type ARG1)(role ARG2))
	(call pwgen_auto_subj_type_transition (ARG1))
	(roleattributeset pwgen_role ARG2))
