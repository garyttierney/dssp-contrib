(macro mutt_role_pattern ((role ARG1)(type ARG2)(type ARG3))
	(call auto_subj_type_transition_pattern (ARG2 mutt.cmd_file ARG3))

	(roletype ARG1 ARG3)

	(allow ARG2 ARG3 (process (signal)))

	(allow ARG3 ARG2 (process (signal)))

	(call mutt_manage_home_files (ARG2))
	(call mutt_relabel_home_files (ARG2))

	(call mutt_home_dir_obj_type_transition_home (ARG2))

	(call mutt_manage_tmpfs (ARG2))
	(call mutt_relabel_tmpfs (ARG2)))

(macro mutt_auto_subj_type_transition_pattern ((type ARG1)(type ARG2))
	(allow ARG1 ARG2 (process (signal)))
	(call auto_subj_type_transition_pattern (ARG1 mutt.cmd_file ARG2)))

