(filecon "HOME_DIR/\.fonts\.conf\.d(/.*)?" any (sys.id sys.role home_fonts.home_config_file (systemlow systemlow)))
(filecon "HOME_DIR/\.config/fontconfig(/.*)?" any (sys.id sys.role home_fonts.home_config_file (systemlow systemlow)))
(filecon "HOME_DIR/\.fonts(/.*)?" any (sys.id sys.role home_fonts.home_data_file (systemlow systemlow)))
