(macro mcstransd_auto_subj_type_transition ((type ARG1))
	(call mcstransd_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 mcstransd.cmd_file mcstransd.subj)))

(macro mcstransd_send_signal ((type ARG1))
