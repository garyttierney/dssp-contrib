(macro qemu_guest_agent_auto_subj_type_transition ((type ARG1))
	(call qemu_guest_agent_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 qemu_guest_agent.cmd_file qemu_guest_agent.subj)))

(macro qemu_guest_agent_send_signal ((type ARG1))
