(context fop_cmd (sys.id sys.role fop.cmd_file (systemlow systemlow)))
(context fop_config (sys.id sys.role fop.config_file (systemlow systemlow)))

(filecon "/etc/fop\.conf" file fop_config)
(filecon "/usr/bin/fop" file fop_cmd)

(filecon "HOME_DIR/\.fop(/.*)?" any (sys.id sys.role fop.home_user_file (systemlow systemlow)))
