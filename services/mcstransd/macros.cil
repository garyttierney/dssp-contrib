(macro mcstransd_adm ((type ARG1)(role ARG2))
	(typeattributeset mcstransd_adm_subj_type ARG1)
	(optional mcstransd_adm_optional_sd
		(call sd_daemon_adm_subj_type (ARG1)))
	(optional mcstransd_adm_optional_sd_askpwd
		(call sd_askpwd_run_sd_askpwd_agent (ARG1 ARG2))))
