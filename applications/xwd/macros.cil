(macro xwd_exec ((type ARG1))
	(call can_exec (ARG1 xwd.cmd_file)))

(macro xwd_auto_subj_type_transition ((type ARG1))
	(call xwd_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 xwd.cmd_file xwd.subj)))

(macro xwd_send_signal ((type ARG1))
	(allow ARG1 xwd.subj (process (signal))))

(macro xwd_run ((type ARG1)(role ARG2))
	(call xwd_auto_subj_type_transition (ARG1))
	(roleattributeset xwd_role ARG2))
