(block sysadm_gvfsdfuse
	(typeattribute sessbus_chat_client_subj_type_attribute)

	(blockinherit gvfsdfuse.subj_blk)

	(call sysadm_gvfsd.daemon (subj gvfsdfuse.cmd_file))

	(optional sysadm_gvfsdfuse_optional_sysadm_sessbus
		(call sysadm_sessbus.service_subj_type (subj)))

	(optional sysadm_gvfsdfuse_sessbus_chat_client_subj_type_optional_sysadm_sessbus
		(allow sessbus_chat_client_subj_type_attribute subj (unix_stream_socket (connectto)))

		(allow sessbus_chat_client_subj_type_attribute subj (dbus (send_msg)))
		(allow subj sessbus_chat_client_subj_type_attribute (dbus (send_msg)))))
