(roleattribute bluetoothctl_role)

(block bluetoothctl
	(blockinherit app.blk)

	(roletype bluetoothctl_role subj)

	(allow subj self (capability (net_raw net_admin)))
	(allow subj self create_socket_perms)

	(call file_read_config_files (subj))

	(call bluetoothd_sysbus_chat_client_subj_type (subj))

	(call miscfile_read_all_terminfo (subj))
	(call miscfile_read_locale (subj))

	(optional bluetoothctl_optional_sysbus
		(call sysbus_client_subj_type (subj))))
