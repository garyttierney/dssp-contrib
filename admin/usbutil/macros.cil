(macro usbutil_exec ((type ARG1))
	(call can_exec (ARG1 usbutil.cmd_file)))

(macro usbutil_auto_subj_type_transition ((type ARG1))
	(call usbutil_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 usbutil.cmd_file usbutil.subj)))

(macro usbutil_run ((type ARG1)(role ARG2))
	(call usbutil_auto_subj_type_transition (ARG1))
	(roleattributeset usbutil_role (ARG2)))

(macro usbutil_send_signal ((type ARG1))
	(allow ARG1 usbutil.subj (process (signal))))
