(macro setools_exec ((type ARG1))
	(call can_exec (ARG1 setools.cmd_file)))

(macro setools_auto_subj_type_transition ((type ARG1))
	(call setools_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 setools.cmd_file setools.subj)))

(macro setools_send_signal ((type ARG1))
	(allow ARG1 setools.subj (process (signal))))

(macro setools_run ((type ARG1)(role ARG2))
	(call setools_auto_subj_type_transition (ARG1))
	(roleattributeset setools_role ARG2))
