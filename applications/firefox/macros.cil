(block firefox_subj_blk
	(blockabstract firefox_subj_blk)

	(blockinherit app_subj_blk)

	(typeattributeset firefox_subj_type subj))

(macro firefox_subj_type ((type ARG1))
	(call app_subj_type (ARG1))
	(typeattributeset firefox_subj_type ARG1))

(macro firefox_exec ((type ARG1))
	(call can_exec (ARG1 firefox.cmd_file)))

(macro firefox_mmap_cmd_files ((type ARG1))
