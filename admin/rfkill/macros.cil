(macro rfkill_exec ((type ARG1))
	(call can_exec (ARG1 rfkill.cmd_file)))

(macro rfkill_auto_subj_type_transition ((type ARG1))
	(call rfkill_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 rfkill.cmd_file rfkill.subj)))

(macro rfkill_send_signal ((type ARG1))
	(allow ARG1 rfkill.subj (process (signal))))

(macro rfkill_run ((type ARG1)(role ARG2))
	(call rfkill_auto_subj_type_transition (ARG1))
	(roleattributeset rfkill_role ARG2))
