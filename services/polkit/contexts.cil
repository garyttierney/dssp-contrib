(context polkit_agent_cmd (sys.id sys.role polkit_agent.cmd_file (systemlow systemlow)))
(context polkit_cmd (sys.id sys.role polkit.cmd_file (systemlow systemlow)))
(context polkit_config (sys.id sys.role polkit.config_file (systemlow systemlow)))
(context polkit_exec_cmd (sys.id sys.role polkit_exec.cmd_file (systemlow systemlow)))
(context polkit_helper_cmd (sys.id sys.role polkit_helper.cmd_file (systemlow systemlow)))
(context polkit_tty_agent_cmd (sys.id sys.role polkit_tty_agent.cmd_file (systemlow systemlow)))
(context polkit_var_lib (sys.id sys.role polkit.var_lib_file (systemlow systemlow)))

(filecon "/etc/polkit-1(/.*)?" any polkit_config)
(filecon "/usr/bin/pkaction" file polkit_exec_cmd)
(filecon "/usr/bin/pkcheck" file polkit_exec_cmd)
(filecon "/usr/bin/pkexec" file polkit_exec_cmd)
(filecon "/usr/bin/pkla-admin-identities" file polkit_helper_cmd)
(filecon "/usr/bin/pkla-check-authorization" file polkit_helper_cmd)
(filecon "/usr/bin/pkttyagent" file polkit_tty_agent_cmd)
(filecon "/usr/lib/polkit-1/polkit-agent-helper-1" file polkit_agent_cmd)
(filecon "/usr/lib/polkit-1/polkitd" file polkit_cmd)
(filecon "/var/lib/polkit-1(/.*)?" any polkit_var_lib)

(optional polkit_unit_optional_sd
	(context polkit_unit (sys.id sys.role polkit.unit_file (systemlow systemlow)))
	(filecon "/usr/lib/systemd/system/[^/]*polkit.*" file polkit_unit))
