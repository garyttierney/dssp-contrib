(macro dd_exec ((type ARG1))
	(call can_exec (ARG1 dd.cmd_file)))

(macro dd_auto_subj_type_transition ((type ARG1))
	(call dd_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 dd.cmd_file dd.subj)))

(macro dd_run ((type ARG1)(role ARG2))
	(call dd_auto_subj_type_transition (ARG1))
	(roleattributeset dd_role (ARG2)))

(macro dd_send_signal ((type ARG1))
	(allow ARG1 dd.subj (process (signal))))
