(filecon "HOME_DIR/\.config(/.*)?" any (sys.id sys.role home_config.home_config_file (systemlow systemlow)))
(filecon "HOME_DIR/\.local(/.*)?" any (sys.id sys.role home_data.home_data_file (systemlow systemlow)))
(filecon "HOME_DIR/bin(/.*)?" any (sys.id sys.role home_cmd.home_user_file (systemlow systemlow)))
(filecon "HOME_DIR/\.local/bin(/.*)?" any (sys.id sys.role home_cmd.home_user_file (systemlow systemlow)))
(filecon "HOME_DIR/\.xinitrc" file (sys.id sys.role home_cmd.home_user_file (systemlow systemlow)))
(filecon "HOME_DIR/\.pki(/.*)?" any (sys.id sys.role home_cert.home_user_file (systemlow systemlow)))
