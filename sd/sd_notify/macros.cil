(macro sd_notify_exec ((type ARG1))
	(call can_exec (ARG1 sd_notify.cmd_file)))

(macro sd_notify_auto_subj_type_transition ((type ARG1))
	(call sd_notify_send_signal (ARG1))
	(call auto_subj_type_transition_pattern (ARG1 sd_notify.cmd_file sd_notify.subj)))

(macro sd_notify_send_signal ((type ARG1))
	(allow ARG1 sd_notify.subj (process (signal))))

(macro sd_notify_run ((type ARG1)(role ARG2))
	(call sd_notify_auto_subj_type_transition (ARG1))
	(roleattributeset sd_notify_role ARG2))
