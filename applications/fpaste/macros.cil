	(allow ARG1 fpaste.var_tmp_user_file manage_file_perms)
	(allow ARG1 fpaste.var_tmp_user_file manage_dir_perms)
	(allow ARG1 fpaste.var_tmp_user_file manage_lnk_file_perms))

(macro fpaste_relabel_var_tmp ((type ARG1))
